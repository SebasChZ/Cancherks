<!-- Alert before acepting request -->
<script>
    document.addEventListener('DOMContentLoaded', function () {
        var successIcons = document.querySelectorAll('.custom-success');

        successIcons.forEach(function (icon) {
            icon.addEventListener('click', function () {
                var aceptarModal = new bootstrap.Modal(document.getElementById('aceptar'));
                aceptarModal.show();
            });
        });
    });
</script>

<!-- Alert before rejecting  request -->
<script>
    document.addEventListener('DOMContentLoaded', function () {
        var successIcons = document.querySelectorAll('.custom-danger');

        successIcons.forEach(function (icon) {
            icon.addEventListener('click', function () {
                var aceptarModal = new bootstrap.Modal(document.getElementById('rechazar'));
                aceptarModal.show();
            });
        });
    });
</script>

<!-- Notify after acepting the request -->
<script>
    document.addEventListener('DOMContentLoaded', function () {
        var btnAceptar = document.getElementById('btnAceptar');
       
        btnAceptar.addEventListener('click', function () {
            
            var aceptarModal = new bootstrap.Modal(document.getElementById('aceptar'));
            
            aceptarModal.hide();
            setTimeout(function () {
                var notificarModal = new bootstrap.Modal(document.getElementById('notificar'));
                notificarModal.show();
            }, 200); 
        });
    });
</script>

<!-- Justify after rejecting the request -->
<script>
    document.addEventListener('DOMContentLoaded', function () {
